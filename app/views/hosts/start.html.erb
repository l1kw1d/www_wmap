<table class="table">
  <tr>
    <td>
      <div class="tab-content col-md-9 col-lg-09">
        <% data = String.new %>
        <% Dir.mkdir(@dir, 0750) unless Dir.exist?(@dir) %>
        <% File.new(@file, 'w+') unless File.exist?(@file) %>
        <% hosts = File.open(@file, 'r+') %>
        <% hosts.each_line { |line| data +=line }; hosts.close %>
        <h4>Please save your known host file after the modification </h4>

        <p>
          <%= form_tag "/hosts/create" do %>
          <%= text_area_tag :file_tag, data, rows: 22, cols: 90 %>
          <%= hidden_field_tag :uid_tag, @uid %>
          <button class="btn btn-default" type="submit">Save</button>
          <% end %>
        </P>
      </div>
    </td>
  </tr>
</table>
